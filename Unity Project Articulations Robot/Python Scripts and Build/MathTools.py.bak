#oldCoord - list [x, y, z]
def normalizeCoordinates(fullRealHandLength, fullUnityHandLength, oldCoord):
    newX = oldCoord[0] * fullUnityHandLength / fullRealHandLength
    newY = oldCoord[1] * fullUnityHandLength / fullRealHandLength
    newZ = oldCoord[2] * fullUnityHandLength / fullRealHandLength
    return [newX, newY, newZ]
    
